                        </WrapPanel>-->

                        <WrapPanel HorizontalAlignment="Center" Margin="-10,20,0,0"/>
                    </StackPanel>
                </Border>
            </WrapPanel>

            <WrapPanel>
                <StackPanel Width="1285"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Page>
