                                        <TextBlock TextWrapping="Wrap" Text="TextBlock" Margin="0,0,0,3"/>
                                        <TextBlock TextWrapping="Wrap" Text="TextBlock" Margin="0,0,0,3"/>
                                        <TextBlock TextWrapping="Wrap" Text="TextBlock" Margin="0,0,0,3"/>
                                    </StackPanel>
