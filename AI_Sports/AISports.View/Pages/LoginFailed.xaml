<Window x:Class="AI_Sports.AISports.View.Pages.LoginFailed"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AI_Sports.AISports.View.Pages"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="登录失败" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid Height="auto"  Margin="0,0,0,0" VerticalAlignment="Bottom">
            <WrapPanel Background="AliceBlue" Margin="0,-360,-0.4,-0.4" Grid.ColumnSpan="3">
                <Label Content="登录失败，请联系宝德龙管理人员！" Margin="50,50,0,0" FontSize="22" FontFamily="Microsoft YaHei"></Label>

            </WrapPanel>
            <Button x:Name="saveButton" Content="关闭" HorizontalAlignment="Right" VerticalContentAlignment="Center" Margin="0,0,20,5" VerticalAlignment="Bottom" Width="75" Height="42" Click="Button_Click" Grid.ColumnSpan="2"/>

        </Grid>
    </Grid>
</Window>
