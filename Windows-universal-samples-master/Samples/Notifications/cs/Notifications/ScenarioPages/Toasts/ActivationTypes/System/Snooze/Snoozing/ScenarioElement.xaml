<UserControl
    xmlns:helpers="using:Notifications.Helpers"
    x:Class="Notifications.ScenarioPages.Toasts.ActivationTypes.System.Snooze.Snoozing.ScenarioElement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:Notifications.Controls"
    Loaded="UserControl_Loaded">

    <controls:StepsControl x:Name="stepsControl" IsNextEnabled="False" Step="1">

        <StackPanel>

            <controls:InstructionControl Instruction="1">Two reminder should have appeared.</controls:InstructionControl>

            <controls:InstructionControl Instruction="2">Snooze the 1 min one for 1 minute, and the 2 min one for 2 minutes.</controls:InstructionControl>

            <controls:InstructionControl Instruction="3">The system should handle snoozing and rescheduling the reminders.</controls:InstructionControl>
            
            <controls:InstructionControl Instruction="4">Confirm that after 1 minute, the 1 min reminder appeared again, and after 2 minutes, the 2 min reminder appeared again.</controls:InstructionControl>

        </StackPanel>


    </controls:StepsControl>

    
</UserControl>