<UserControl
    xmlns:helpers="using:Notifications.Helpers"
    x:Class="Notifications.ScenarioPages.Toasts.ExpiringToast.ScenarioElement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:Notifications.Controls"
    Loaded="UserControl_Loaded">
    
    <controls:StepsControl>
        <StackPanel Margin="24">
            <TextBlock TextWrapping="Wrap" Text="A toast should have appeared. Now go to Action Center in lower right hand corner and wait for it to disappear by itself. It should take 30 seconds."/>
        </StackPanel>
    </controls:StepsControl>
</UserControl>