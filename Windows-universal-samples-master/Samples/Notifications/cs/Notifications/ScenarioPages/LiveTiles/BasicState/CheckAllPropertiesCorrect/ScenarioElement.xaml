<UserControl
    xmlns:helpers="using:OneNotifications_UWP.Helpers"
    x:Class="OneNotifications_UWP.ScenarioPages.LiveTiles.BasicState.CheckAllPropertiesCorrect.ScenarioElement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:OneNotifications_UWP.Controls">

    <controls:StepsControl>
        
        <StackPanel>
            
            <controls:InstructionControl Instruction="1">
                <Button
                    x:Name="ButtonPinSecondaryTile"
                    Content="Click to pin secondary tile"
                    HorizontalAlignment="Stretch"
                    Click="ButtonPinSecondaryTile_Click"/>    
            </controls:InstructionControl>
            
            <controls:InstructionControl Instruction="2">
                <StackPanel>
                    <TextBlock
                        Text="Confirm the tile is transparent (uses accent color, or if they have background image set, shows the background image)"
                        TextWrapping="Wrap"/>
                </StackPanel>
            </controls:InstructionControl>
            
        </StackPanel>
        
    </controls:StepsControl>
    
</UserControl>