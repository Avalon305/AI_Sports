<UserControl
    xmlns:helpers="using:Notifications.Helpers"
    x:Class="Notifications.ScenarioPages.LiveTiles.BasicState.BackgroundColor.Custom.ScenarioElement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:Notifications.Controls">

    <ScrollViewer Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="24">

            <Button
                x:Name="ButtonPinSecondaryTile"
                Content="Click to pin secondary tile"
                HorizontalAlignment="Stretch"
                Click="ButtonPinSecondaryTile_Click"/>

            <RichTextBlock Margin="0,24,0,0">
                <Paragraph>You can specify a specific background color for a secondary tile in the format #FFFFFF (no opacity is supported).</Paragraph>
                <Paragraph/>
                <Paragraph>The above button pins a new secondary tile, setting VisualElements.BackgroundColor to
                    <Span Foreground="#22ab30">#22ab30 (or R=0, G=171, B=48)</Span>.</Paragraph>
            </RichTextBlock>

        </StackPanel>
    </ScrollViewer>
    
</UserControl>