<UserControl
    xmlns:helpers="using:Notifications.Helpers"
    x:Class="Notifications.ScenarioPages.LiveTiles.BasicState.BackgroundColor.InheritFromPrimary.ScenarioElement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:Notifications.Controls">

    <ScrollViewer Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="24">

            <Button
                x:Name="ButtonPinSecondaryTile"
                Content="Click to pin secondary tile"
                HorizontalAlignment="Stretch"
                Click="ButtonPinSecondaryTile_Click"/>

            <RichTextBlock Margin="0,24,0,0">
                <Paragraph>If you do not specify a background color for a secondary tile, by default it will inherit the primary color specified for your primary tile (which is set in your app manifest).</Paragraph>
                <Paragraph/>
                <Paragraph>The above button pins a new secondary tile without setting VisualElements.BackgroundColor.</Paragraph>
            </RichTextBlock>

        </StackPanel>
    </ScrollViewer>
    
</UserControl>