<UserControl
    xmlns:helpers="using:Notifications.Helpers"
    x:Class="Notifications.ScenarioPages.LiveTiles.Notifications.PrimaryTile.Clearing.ScenarioElement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:Notifications.Controls">

    <ScrollViewer Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="24">
            
            <Button
                Content="Clear notifications from primary tile"
                HorizontalAlignment="Stretch"
                Click="ButtonClearNotifications_Click"/>
            
            <RichTextBlock
                Margin="0,12,0,0">
                <Paragraph>
                    The above button clears the notifications currently displayed on this app's primary tile.
                </Paragraph>
                <Paragraph/>
                <Paragraph>If you currently don't have a notification on the primary tile, go back and send a notification first.</Paragraph>
            </RichTextBlock>

        </StackPanel>
    </ScrollViewer>
    
</UserControl>