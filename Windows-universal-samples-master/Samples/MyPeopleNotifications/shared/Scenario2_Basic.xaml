<Page
    x:Class="SDKTemplate.Scenario2_Basic"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:SDKTemplate"
    mc:Ignorable="d">

    <ScrollViewer Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="12,10,12,12">
        <StackPanel>
            <TextBlock Text="Basics" Style="{StaticResource SampleHeaderTextStyle}"/>
            <TextBlock Style="{StaticResource ScenarioDescriptionTextStyle}" TextWrapping="Wrap">
                    Send a notification using a static image from a local source.
            </TextBlock>
            <local:Payload Markup="&lt;toast hint-people='mailto:{email}'&gt;&#10;
    &lt;visual lang='en-US'&gt;&#10;
        &lt;binding template='ToastGeneric'&gt;&#10;
            &lt;text&gt;Fallback toast text&lt;/text&gt;&#10;
        &lt;/binding&gt;&#10;
        &lt;binding template='ToastGeneric' experienceType='shoulderTap'&gt;&#10;
            &lt;image src='ms-appx:///Assets/cliff.jpg' /&gt;&#10;
        &lt;/binding&gt;&#10;
    &lt;/visual&gt;&#10;
&lt;/toast&gt;" Margin="0,10,0,0"/>
        </StackPanel>
    </ScrollViewer>
</Page>
