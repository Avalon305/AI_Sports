<Page
    x:Class="SDKTemplate.Scenario2_Multiple"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ScrollViewer Margin="12,10,12,12">
            <StackPanel>
                <TextBlock Text="Description:" Style="{StaticResource SampleHeaderTextStyle}"/>
                <TextBlock Style="{StaticResource ScenarioDescriptionTextStyle}" TextWrapping="Wrap">
                    Pick multiple contacts
                </TextBlock>
                <Button Content="Pick contact email addresses" Margin="0,10,0,0" Click="{x:Bind PickContactsEmail}" />
                <Button Content="Pick contact phone numbers" Margin="0,10,0,0" Click="{x:Bind PickContactsPhone}" />
                <TextBlock x:Name="OutputText" TextWrapping="Wrap" Margin="0,10,0,0" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
