<Page
    x:Class="SDKTemplate.Scenario2_DisplayText"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="12,10,12,12">
        <StackPanel>
            <TextBlock Text="Description:" Style="{StaticResource SampleHeaderTextStyle}"/>
            <TextBlock Style="{StaticResource ScenarioDescriptionTextStyle}" TextWrapping="Wrap">
                Display a greeting on the selected Line Display.
                Features not supported by the Line Display are disabled.
            </TextBlock>
            <CheckBox x:Name="BlinkCheckBox" Content="Use blinking text" Margin="0,10,0,0"/>
            <CheckBox x:Name="CenterCheckBox" Content="Center the text"/>
            <Button x:Name="DisplayTextButton" Content="Display text" Click="DisplayTextButton_Click" IsEnabled="False" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
