<Page
    x:Class="SDKTemplate.Scenario1_Print"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="12,10,12,12">
        <StackPanel>
            <TextBlock Text="Description:" Style="{StaticResource SampleHeaderTextStyle}"/>
            <TextBlock Style="{StaticResource ScenarioDescriptionTextStyle}" Text="Printing in 3D"/>

            <TextBlock Margin="0,10,0,0">First, create or load a model.</TextBlock>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Margin="0,0,10,10" Content="Create programmatically" Click="{x:Bind CreateProgrammatically}"/>
                <Button Margin="0,0,10,10" Content="Create from XML" Click="{x:Bind CreateFromXml}"/>
            </StackPanel>
            <Button Margin="0,0,10,0" Content="Load from a file and repair" Click="{x:Bind LoadPackageFromFile}"/>

            <TextBlock Margin="0,10,0,0" TextWrapping="Wrap">
                Once you have a model, you can save it or print it.
            </TextBlock>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button x:Name="SaveButton" Margin="0,0,10,10" IsEnabled="False" Content="Save" Click="{x:Bind SavePackage}"/>
                <Button x:Name="PrintButton" Margin="0,0,10,10" IsEnabled="False" Content="Print" Click="{x:Bind PrintPackage}"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
